{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "is_on_sale": {
      "type": "boolean",
      "default": false
    },
    "is_unpacked": {
      "type": "boolean",
      "default": false
    },
    "is_top_sold": {
      "type": "boolean",
      "default": false
    },
    "is_new": {
      "type": "boolean",
      "default": false
    },
    "discountPercentage": {
      "type": "integer",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "is_on_sale"
            },
            true
          ]
        }
      },
      "min": 0,
      "max": 100
    },
    "colors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::color.color",
      "mappedBy": "products"
    },
    "start_price": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "is_in_stock": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "size": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::size.size",
      "inversedBy": "products"
    },
    "product_type": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-type.product-type",
      "inversedBy": "products"
    }
  }
}
